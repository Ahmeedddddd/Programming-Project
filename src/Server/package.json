{
  "name": "careerlaunch-server",
  "version": "1.0.0",
  "description": "CareerLaunch Backend & Frontend Servers",
  "main": "backend.js",
  "scripts": {
    "start": "npm-run-all --parallel start:frontend start:backend",
    "start:frontend": "node app.js",
    "start:backend": "node backend.js",
    "start:api": "node api.js",
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "nodemon app.js",
    "dev:backend": "nodemon backend.js",
    "dev:watch": "npm-run-all --parallel \"nodemon app.js\" \"nodemon backend.js\"",
    "dev:old": "npm-run-all --parallel \"nodemon app.js\" \"nodemon api.js\"",
    "test:servers": "npm-run-all --parallel test:frontend test:backend",
    "test:frontend": "curl http://localhost:8383 || echo 'Frontend server not responding'",
    "test:backend": "curl http://localhost:3001/api/health || echo 'Backend server not responding'",
    "stop": "pkill -f 'node.*app.js|node.*backend.js' || echo 'No servers to stop'"
  },
  "keywords": [
    "careerlaunch",
    "backend",
    "frontend", 
    "express",
    "mysql",
    "mvc"
  ],
  "author": "CareerLaunch Team",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "mysql2": "^3.14.1",
    "nodemailer": "^7.0.3",
    "nodemailer-express-handlebars": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}